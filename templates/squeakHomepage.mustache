<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="meta-csrf-token" content="{{csrf_token}}">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">


    <title>Request information</title>
</head>
<body>


<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal">Squeak!</h5>

    <form class="form-inline w-75 mt-2 mt-md-0"  method="POST" action="squeak">
        <div class="input-group mr-sm-2 w-75">
            <div class="input-group-prepend">
                <div class="input-group-text">{{username}}</div>
            </div>
            <input type="text" name="squeak" class="form-control" id="squeaktext">
            <input type="hidden" name="CSRFToken" value="{{csrf_token}}">
            <div class="input-group-append">

                <select class="custom-select" name="recipient" id="recipient">
                    <option value="all" selected>@ Everyone</option>
                    {{&customSelectSqueakRecipient}}
                    <option value="H. Curry">@ H. Curry</option>
                    <option value="A. Church">@ A. Church</option>
                    <option value="M. Schönfinkel">@ M. Schönfinkel</option>
                    <option value="L. E. J. Brouwer">@ L. E. J. Brouwer</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mr-sm-2 ">Squeak!</button>
    </form>

    <form class="form-inline mt-2 mt-md-0">
        <input type="hidden" name="CSRFToken" value="{{csrf_token}}">
        <button type="button" class="btn btn-primary" onclick="signout(this)">Sign out</button>

    </form>
</div>

<div class="container">
        {{&squeakUnescaped}}
        {{&squealUnescaped}}





</div>


<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/squeak.js"></script>
</body>
</html>

